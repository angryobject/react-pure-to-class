{
  "private": true,
  "name": "react-pure-to-class-vscode",
  "displayName": "React Pure To Class",
  "description": "Convert pure react components to class components",
  "version": "1.1.7",
  "publisher": "angryobject",
  "license": "MIT",
  "author": {
    "name": "Max Shishkin"
  },
  "homepage": "https://github.com/angryobject/react-pure-to-class",
  "keywords": [
    "codemod",
    "jscodeshift",
    "react",
    "vscode"
  ],
  "main": "./extension.js",
  "engines": {
    "vscode": "^1.12.0"
  },
  "categories": [
    "Formatters",
    "Other"
  ],
  "activationEvents": [
    "onCommand:extension.reactPureToClass",
    "onCommand:extension.reactClassToPure"
  ],
  "contributes": {
    "commands": [
      {
        "command": "extension.reactPureToClass",
        "title": "React Pure To Class"
      },
      {
        "command": "extension.reactClassToPure",
        "title": "React Class To Pure"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "React Pure To Class",
      "properties": {
        "reactPureToClass.typescript": {
          "type": "boolean",
          "default": false,
          "description": "Support TypeScript files. Experimental, may or may not work"
        },
        "reactPureToClass.reactComponent": {
          "type": "string",
          "default": "React.Component",
          "description": "Where to find base React component"
        },
        "reactPureToClass.classToPureUseArrows": {
          "type": "boolean",
          "default": false,
          "description": "Convert to arrow function or function otherwise"
        },
        "reactPureToClass.classToPureDestructuring": {
          "type": "boolean",
          "default": false,
          "description": "Will destructure props in the argument where it is safe to do so"
        }
      }
    }
  },
  "scripts": {
    "watch": "webpack --watch",
    "build": "webpack"
  },
  "devDependencies": {
    "jscodeshift": "^0.5.1",
    "react-codemod": "git+https://git@github.com/reactjs/react-codemod.git",
    "react-pure-to-class": "^1.1.5",
    "vscode": "^1.1.21",
    "webpack": "^4.19.0",
    "webpack-cli": "^3.1.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/angryobject/react-pure-to-class"
  },
  "icon": "icon.png"
}
